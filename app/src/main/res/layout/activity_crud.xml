                    android:autofillHints="" />

                <EditText
                android:id="@+id/phoneinternalTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:hint="@string/telefon_intern"
                tools:ignore="MissingPrefix,TextFields"
                    android:autofillHints="" />



                <EditText
                    android:id="@+id/formnameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/cercet_ri_statistice"
                    tools:ignore="MissingPrefix,TextFields"
                    android:autofillHints="" />

                <EditText
                    android:id="@+id/emailTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/e_mail"
                    tools:ignore="MissingPrefix,TextFields"
                    android:autofillHints="" />

                <EditText
                    android:id="@+id/personalinfoTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/informa_ii_personale"
                    tools:ignore="MissingPrefix,TextFields"
                    android:autofillHints="" />

            </LinearLayout>

